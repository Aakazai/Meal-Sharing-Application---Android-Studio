<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEBDD"
    app:backgroundTint="@null"
    tools:context=".cook.CookRegistration">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="333dp"
        android:layout_height="444dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="45dp"
        android:orientation="vertical"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/cook_btn_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/cook_et_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717" />

        <EditText
            android:id="@+id/cook_et_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717" />

        <EditText
            android:id="@+id/cook_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717" />

        <EditText
            android:id="@+id/cook_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C8ADAD"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717" />

        <EditText
            android:id="@+id/cook_et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 1234567890"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717" />

        <EditText
            android:id="@+id/cook_et_description"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:ems="10"
            android:hint="Short description about yourself"
            android:inputType="textShortMessage"
            android:minHeight="48dp"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717" />

        <Button
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#810000"
            android:ems="10"
            android:hint="Insert Image of Void Cheque"
            android:inputType="number"
            android:minHeight="48dp"
            android:onClick="onClickImage"
            android:textColor="#1B1717"
            android:textColorHint="#1B1717"
            app:backgroundTint="@null"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <Button
        android:id="@+id/cook_btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="125dp"
        android:background="#CE1212"
        android:backgroundTint="#74112F"
        android:onClick="goToWelcome"
        android:text="Sign up"
        app:backgroundTint="#CE1212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>